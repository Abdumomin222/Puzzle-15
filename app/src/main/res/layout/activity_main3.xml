<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/game_About"
    android:background="@drawable/aboutimage_cleanup">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="250dp"
                android:layout_height="350dp"
                android:layout_marginTop="40dp"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Puzzle 15 is a popular logic game in which you have to arrange the numbers from 1 to 15 in order. You make the move through the empty cells. The goal is to arrange all the numbers in the correct order."
                    android:textStyle="italic"
                    android:textSize="23sp"
                    android:gravity="center"/>

            </FrameLayout>



        </FrameLayout>


    </LinearLayout>

</LinearLayout>